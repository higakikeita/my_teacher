.main-section
  
  =render "teachersheader"
  %header.masthead.text-white.text-center
    .overlay
      .container
      .swiper-container
        -# slide wrapper
        .swiper-wrapper
          -# slides
          .swiper-slide
            = image_tag 'photo_2.jpg', alt: 'swipe01',id:"swiper-image"
          .swiper-slide
            = image_tag 'teacher.jpg', alt: 'swipe02',id:"swiper-image"
          .swiper-slide
            = image_tag 'kotaro.jpg', alt: 'swipe03',id:"swiper-image"
        -# if need navigation button 
      .swiper-button-prev
      .swiper-button-next
      -# if need pagination 
        .swiper-pagination
  
