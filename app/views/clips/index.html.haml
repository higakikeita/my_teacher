=render "teachers/teachersheader"
.main-section
  .pickup-section
    .pickup-section__main
      .pickup-section__main--title
        .main__title--text
          お気に入りの先生
          .main__title--more
          
          %ul.pickup-section__main--teachers
            - @clips.each do |clip|
              - teacher = Teacher.find(clip.teacher_id)
                
              %li.teachers__list
                %figure.teacher
                  %figucaption.teacher__text
                    =teacher.name
                  .teacher__thumbnail
                    .teacher__thumbnail--label
                    .teacher__thumbnail--image
                      =link_to image_tag(teacher.images[0].teacher_image.url),teacher_path(clip.teacher_id)
        
          



=render "teachers/teachersfooter"
    
